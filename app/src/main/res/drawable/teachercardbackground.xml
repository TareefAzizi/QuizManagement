<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shape (Rounded Rectangle) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Define the background color -->
            <corners android:radius="8dp" /> <!-- Define the corner radius (adjust as needed) -->
        </shape>
    </item>

    <!-- Shadow Layer -->
    <item android:right="6dp" android:left="6dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
