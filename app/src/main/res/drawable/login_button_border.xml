<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state (use the black background) -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- New color -->
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- Border color -->
        </shape>
    </item>

    <!-- Pressed state (use the pale blue background) -->
    <item android:state_pressed="true">
        <color android:color="@color/pale_blue" />
    </item>
</selector>
